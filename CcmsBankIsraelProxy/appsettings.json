{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CcmsBankIsraelProxy": "Debug"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      }
    ]
  },
  "AllowedHosts": "*",
  "Boi": {
    "CardFields": {
      "IdNumber": "ID_Number",
      "EmployeeNumber": "Employee_Number",
      "CardNumber": "CardNo",
      "FirstName": "FirstName_Hb",
      "LastName": "LastName_Hb",
      "FirstNameEng": "FirstName_En",
      "LastNameEng": "LastName_En",
      "EmployeeType": "EmployeeType",
      "HireDate": "HireDate",
      "FireDate": "FireDate",
      "PhoneNumber": "Phone",
      "Email": "Email",
      "UPN": "UPN",
      "Photo": "Photo",
      "PhotoBase64": "PhotoBase64"
    },
    "Sap": {
      "Enabled": true,
      "Endpoint": "http://localhost:14363/SAP_IN.asmx",
      "Username": "sap_user",
      "Password": "sap_password"
    },
    "Picture": {
      "Enabled": true,
      "Endpoint": "https://sapwaexq.ad.boi.gov.il:50001/XISOAPAdapter/MessageServlet?senderParty=&senderService=BankIsrael_QA&receiverParty=&receiverService=&interface=comda_pic_mi&interfaceNamespace=http%3A%2F%2Fboi.org.il%2FHR_Comda_pic",
      "Username": "sap_user",
      "Password": "sap_password"
    },
    "Sms": {
      "Enabled": true,
      "Endpoint": "http://iiscrtprd/shvakim/GeneralServices/service1.asmx",
      "SendOnCardUpdate": false,
      "CardUpdateMessage": "Your card has been updated successfully."
    }
  }
}
